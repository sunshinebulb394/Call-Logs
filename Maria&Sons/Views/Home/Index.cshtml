@model IEnumerable<CallLogs>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <form method="get" asp-action="Index" >
        <div class="input-group">
            <input type="search" class="form-control rounded" placeholder="Search" aria-label="Search" aria-describedby="search-addon" name="name" />
            <button type="submit" class="btn btn-outline-primary">search</button>
        </div>
    </form>
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">
                Call Logs
            </h2>
        </div>

        <div class="col-6 text-end">
            <a asp-controller="Home" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Add new call log
            </a>
        </div>
    </div>

    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Caller Id
                </th>
                <th>
                    Call Date
                </th>
                <th>
                    Call duration
                </th>
                <th>
                    Cost
                </th>
                <th>
                    Call type
                </th>
                <th>
                    Destination
                </th>
              
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="20%">
                        @obj.CallerId.ToUpper()
                    </td>
                    <td width="20%">
                        @obj.CallDate
                    </td>
                    <td width="20%">
                        @obj.Duration
                    </td>
                    <td width="20%">
                        GHS @obj.CostOfCall
                    </td>
                    <td width="20%">
                        @obj.CallType
                    </td>
                    <td width="20%">
                        @obj.Destination.ToUpper()
                    </td>

                 
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Home" asp-action="Delete" asp-route-id="@obj.id" class="btn btn-danger mx-2"><i class="bi bi-trash"></i>Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

